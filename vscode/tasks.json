{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build", // 与launch的"preLaunchTask"一致
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-Wall",
                "HelloWorld.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}